<%= render "shared/progressbar", step: 1 %>
<div class="container form-container">
  <div class="dates-form">
    <h3 class="mt-3">Choose dates</h3>
    <div class="mt-2">
      <p>Choose the range of dates that you want</p>
    </div>
    <%= simple_form_for @booking_dates do |f| %>
      <%= f.input :dates, label: false, input_html: {class: "datepicker hidden"} %>
      <input class="button-rounded fixed-button" type="submit" value="Next" name="commit">
    <% end %>
  </div>
</div>



