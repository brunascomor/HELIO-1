<html>
  <head>
    <%= wicked_pdf_stylesheet_link_tag "pdf" %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

  </head>
  <body>
    <div class="container">
      <div class="form-wrapper px-2">
        <div class="ticket-picture mt-4" style="background-image: url(<%= cl_image_path iteration.event.photo.key %>)">
        </div>

        <div class="mt-5">
          <h1> <%= event.title.capitalize %> </h1>
          <h2><%= booking.iteration.start_date.strftime("%A, %b %d  %H:%M") %></h2>
        </div>

        <div class="dot-gray-bg">
          .
        </div>
            
        <div class="container">
          <div class="row qr-box">

            <div class="dot-black">
              :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
            </div>

            <div class="mt-4">
              <h3><%= event.address %></h3>      
            </div>

            <div class="dot-gray-bg">
              .
            </div>
              
            <div>
              <h3>Total price: <%= booking.budget %>€ x <%= booking.participants %> = <%= booking.budget * booking.participants %>€</h3>
            </div>

            <div class="dot-gray-bg">
              .
            </div>

            
           <div class="dot-black">
             :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
           </div>
              <h2 class="mt-3"><%= booking.user.first_name %> <%= booking.user.last_name %></h2>
              <h2 class="mt-3"><%= booking.user.email %></h2>
            <div class="qr-code my-5" style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTI1QjcJ7T4Av3QDBvYz6tHXg5_KOCs_yh4JQ&usqp=CAU')">
            </div>

            <div class="dot-gray-bg">
              .
            </div>

            <div>
              <p></p>
            </div>
          </div>
        </div>

      </div>
    </div>

  </body>
</html>